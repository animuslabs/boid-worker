{
  "$schema": "https://json.schemastore.org/pm2-ecosystem.json",
  "apps": [
    {
      "name": "boid-worker-history-loadSysActions",
      "cwd": "./dist",
      "script": "./jobs/history/loadSysActions.js",
      "autorestart": true,
      "env": {
        "CHAIN": "telosTest",
        "LOGLEVEL": "DEBUG",
        "NODE_NO_WARNINGS": "1",
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "args": [
        "--color"
      ]
    },
    {
      "name": "boid-worker-history-cleanOldRecords",
      "cwd": "./dist",
      "script": "./jobs/history/cleanOldRecords.js",
      "autorestart": false,
      "cron_restart": "0 0 * * *",
      "env": {
        "CHAIN": "telosTest",
        "LOGLEVEL": "DEBUG",
        "NODE_NO_WARNINGS": "1",
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "args": [
        "--color"
      ]
    }
  ]
}